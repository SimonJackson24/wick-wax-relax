{
  "name": "wick-wax-relax-backend",
  "version": "1.0.0",
  "description": "Backend API for Wick Wax Relax PWA",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:prod": "cross-env NODE_ENV=test jest --config=jest.config.js --verbose --detectOpenHandles --forceExit --maxWorkers=1 --no-cache --coverage",
    "test:watch": "cross-env NODE_ENV=test jest --config=jest.config.js --watch",
    "test:performance": "cross-env NODE_ENV=test jest __tests__/performance/ --config=jest.config.js --verbose",
    "test:auth": "cross-env NODE_ENV=test jest __tests__/routes/auth.test.js --config=jest.config.js --verbose",
    "test:validation": "cross-env NODE_ENV=test jest __tests__/middleware/validation.test.js --config=jest.config.js --verbose",
    "test:clean": "rimraf wick_wax_relax_test.db coverage logs/test.log",
    "migrate": "node migrate.js",
    "migrate:up": "node migrate.js up",
    "migrate:rollback": "node migrate.js rollback",
    "migrate:status": "node migrate.js status"
  },
  "dependencies": {
    "@sentry/node": "^8.24.0",
    "@sentry/tracing": "^7.114.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "commander": "^11.1.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-prometheus-middleware": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "pdfkit": "^0.17.2",
    "redis": "^4.6.13",
    "sharp": "^0.34.3",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.1",
    "web-push": "^3.6.7",
    "winston": "^3.13.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.10",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "api",
    "express",
    "sqlite"
  ],
  "author": "",
  "license": "ISC"
}
