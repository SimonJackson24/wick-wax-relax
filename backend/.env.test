# Test Environment Configuration
NODE_ENV=test
PORT=3001

# Database Configuration
DB_TYPE=sqlite
DB_PATH=./wick_wax_relax_test.db

# JWT Configuration
JWT_SECRET=test_jwt_secret_for_production_ready_testing_only_change_in_production
JWT_REFRESH_SECRET=test_refresh_secret_for_production_ready_testing_only_change_in_production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Configuration (Test Mode)
EMAIL_SERVICE=test
EMAIL_HOST=localhost
EMAIL_PORT=1025
EMAIL_USER=test
EMAIL_PASS=test
EMAIL_FROM=noreply@wickwaxrelax.test

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# External API Keys (Test Values)
REVOLUT_API_KEY=test_api_key_for_production_testing
REVOLUT_WEBHOOK_SECRET=test_webhook_secret_for_production_testing

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=test_session_secret_for_production_testing

# Monitoring
ENABLE_METRICS=true
METRICS_PATH=/metrics

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads/test

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/test.log

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Cache Configuration
CACHE_TTL=300
CACHE_MAX_SIZE=100

# Database Connection Pool
DB_POOL_MIN=1
DB_POOL_MAX=5

# Test Specific Settings
CLEANUP_TEST_DATA=true
SEED_TEST_DATA=true
DISABLE_EXTERNAL_SERVICES=true